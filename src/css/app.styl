// app global css in Stylus form
@import url('https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700&display=swap&subset=cyrillic')

.q-page,
.q-header,
.q-footer {
  max-width: 650px
  margin: 0 auto
}

.dialog-min300 {
  min-width: 340px
}

.q-dialog__inner .q-card,
.q-dialog__inner .q-select__dialog {
  max-width: 400px !important;
}
.avatar__text {
  text-align: center;
  line-height: 40px;
  vertical-align: middle;
  padding: 0 !important;
  height: 40px;
  width: 40px;
}

.text-overflow {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.contacts__filter {
  position: absolute;
  left: -12px;
  right: -48px;
  top: 56px;
  padding: 12px;
  background: #fff;
  z-index: 1;
  border-radius: 4px;
  border: 1px solid #ccc;
  color: #000;
}
.balance {
  &__coin-avatar {
    color: #fff;
    letter-spacing: 0;
    font-weight: 500;
  }
  &__coin-letter {
    transform: skew(-5deg, 0deg);
  }
}

.q-notifications .q-notifications__list--bottom .q-notification {
  margin-top: -100px;
}

@media screen and (max-width: 510px) {
  .headerMenu .q-tab {
    padding: 0;
    width: 25%;
  }
  .headerMenu .q-tab__icon {
    transition: transform 0.3s;
    font-size: 1.6rem;
  }
  .headerMenu .q-tab--active .q-tab__icon {
    transform: translate3d(0, -10px, 0) scale(0.8);
    // font-size: 1.2rem;
  }
  .headerMenu .q-tab__label {
    font-size: 0.7rem;
    opacity: 0;
    margin-bottom: -1.2rem;
    transform: translate3d(0, 0, 0) scale3d(0.5, 0.5, 0.5);
    transition: transform 0.3s, opacity 0.2s;
  }
  .headerMenu .q-tab--active .q-tab__label {
    transform: translate3d(0, -10px, 0) scale3d(1, 1, 1);
    opacity: 1;
  }
}

.animated {
  backface-visibility: hidden;
  transform: translateZ(0);
}

.start {
  &__container {
    backface-visibility: hidden;
    transform: translateZ(0);
    background: #fff;
    box-shadow: 50px -50px 120px -70px #9cf4d8 inset,
                -50px 40px 80px -90px #87ceeb inset,
                0px 50px 60px -50px #daf5fa inset;
    animation: gradient 7s ease infinite alternate;
  }
  &__mnemonic {
    & .q-field__native {
      padding: 15px 0px;
      text-align: center;
      font-size: 1.6rem;
      line-height: 1.8rem;
    }
  }
}
@keyframes gradient {
  0% {
    box-shadow: 50px -50px 100px -70px #9cf4d8 inset,
                -50px 40px 80px -90px #87ceeb inset,
                0px 50px 80px -50px #daf5fa inset;
  }
  25% {
    box-shadow: 10px 50px 90px -70px #9cf4d8 inset,
                -50px 50px 120px -150px #87ceeb inset,
                0px -50px 90px -40px #daf5fa inset;
  }
  50% {
    box-shadow: -50px -50px 60px -50px #9cf4d8 inset,
                30px 50px 100px -80px #87ceeb inset,
                0px 0px 10px -100px #daf5fa inset;
  }
  75% {
    box-shadow: 50px 50px 120px -90px #9cf4d8 inset,
                -40px 50px 80px -70px #87ceeb inset,
                -50px -20px 90px -80px #daf5fa inset;
  }
}

