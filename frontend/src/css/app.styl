.q-dialog__inner .scroll .q-separator:last-child {
  display: none
}
.q-dialog__inner .q-select--without-input {
  display: none;
  & + .scroll {
    padding: 10px 0;
  }
}
.q-select__dialog .q-field__bottom { display: none; }

.q-dialog__backdrop {
  background-color: rgba(26, 35, 55, 0.7)
}

.mnemonic__card {
  margin: 1em 0 2em;
}
.address__qr {
  min-width: 300px;
}

.wallet__active-icon {
  position: absolute;
  right: -0.4rem;
  bottom: -0.3rem;
  z-index: 1;
  border: 0.3rem solid #fff;
  border-radius: 50%;
}

.pretty__min {
  color: $grey-8;
  font-size: 0.8em
  font-weight: 400
}

.validation-success,
.validation-failure,
.validation-pending {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, .8);
  text-align: center;
  font-weight: bold;
  font-size: 1.4rem;
  padding: 10px;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}
.validation-success {
  color: green;
}
.validation-failure {
  color: red;
}
