// app global css in Stylus form
@import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap&subset=cyrillic')

.q-page,
.q-header,
.q-footer {
  max-width: 650px
  margin: 0 auto
}

.dialog-min300 {
  min-width: 340px
}

.q-dialog__inner .q-card,
.q-dialog__inner .q-select__dialog {
  max-width: 400px !important;
}
.avatar__text {
  text-align: center;
  line-height: 40px;
  vertical-align: middle;
  padding: 0 !important;
  height: 40px;
  width: 40px;
}

.text-overflow {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.contacts__filter {
  position: absolute;
  left: -12px;
  right: -48px;
  top: 56px;
  padding: 12px;
  background: #fff;
  z-index: 1;
  border-radius: 4px;
  border: 1px solid #ccc;
  color: #000;
}
.balance {
  &__coin-avatar {
    color: #fff;
    letter-spacing: 0;
    font-weight: 500;
  }
  &__coin-letter {
    transform: skew(-5deg, 0deg);
  }
}

@media screen and (max-width: 410px) {
  .headerMenu .q-tab__icon {
    transition: transform 0.3s;
    font-size: 1.6rem;
  }
  .headerMenu .q-tab--active .q-tab__icon {
    transform: translate3d(0, -10px, 0) scale(0.8);
    // font-size: 1.2rem;
  }
  .headerMenu .q-tab__label {
    font-size: 0.7rem;
    opacity: 0;
    margin-bottom: -1.2rem;
    transform: translate3d(0, 0, 0) scale3d(0.5, 0.5, 0.5);
    transition: transform 0.3s, opacity 0.2s;
  }
  .headerMenu .q-tab--active .q-tab__label {
    transform: translate3d(0, -10px, 0) scale3d(1, 1, 1);
    opacity: 1;
  }
}

.header {
  background: linear-gradient(145deg, #1976d2 11%, #0f477e 75%);
}
.header__wallet {
  display: inline-block;
  min-width: 180px;
  & .q-field__marginal { color: rgba(255, 255, 255, 0.45) }
  & .q-field__native { color: #fff }
}
