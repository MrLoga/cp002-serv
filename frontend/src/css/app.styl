// app global css in Stylus form
@import url('https://fonts.googleapis.com/css?family=Roboto:400,500,700&display=swap&subset=cyrillic')

.q-page,
.q-header {
  max-width: 650px
  margin: 0 auto
}

.dialog-min300 {
  min-width: 300px
}

.q-dialog__inner .q-card,
.q-dialog__inner .q-select__dialog {
  max-width: 400px !important;
}
.avatar__text {
  text-align: center;
  line-height: 40px;
  vertical-align: middle;
  padding: 0 !important;
  height: 40px;
  width: 40px;
}

.text-overflow {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.contacts__filter {
  position: absolute;
  left: -12px;
  right: -48px;
  top: 56px;
  padding: 12px;
  background: #fff;
  z-index: 1;
  border-radius: 4px;
  border: 1px solid #ccc;
  color: #000;
}